{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["@kontent-ai/biome-config/base"],
	"formatter": {
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 140
	},
	"linter": {
		"rules": {
			"performance": {
				"noBarrelFile": "off"
			}
		}
	},
	"files": {
		"ignore": ["tests/integration/snapshots/**", "sample/**"]
	}
}
